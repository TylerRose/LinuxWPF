<Window x:Class="WpfHost.HostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Host - Hot Reload Shell" 
        Height="700" Width="1000"
        Background="#2D2D30">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#3E3E42" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ”¥ WPF Hot Reload Host" 
                           Foreground="White" FontSize="16" FontWeight="Bold" 
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusText" Text=" - Waiting for app..." 
                           Foreground="#888" FontSize="14" 
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- App Container - Where the loaded app UI goes -->
        <Border x:Name="AppContainer" Grid.Row="1" Margin="5">
            <TextBlock Text="App will load here..." 
                       Foreground="#666" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       FontSize="24"/>
        </Border>
        
        <!-- Footer with controls -->
        <Border Grid.Row="2" Background="#3E3E42" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="ReloadButton" Content="ðŸ”„ Reload App" 
                        Padding="15,8" Margin="5,0" Click="ReloadButton_Click"/>
                <Button x:Name="UnloadButton" Content="â Unload" 
                        Padding="15,8" Margin="5,0" Click="UnloadButton_Click"/>
                <TextBlock x:Name="LoadCountText" Text="Loads: 0" 
                           Foreground="#888" VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
